<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.bank.persistence.IAccountDAO">
    <resultMap id="AssociateResultMap" type="Associate">
        <result property="id" column="id"/>
        <result property="amount" column="amount"/>
        <result property="dateCreated" column="date_created"/>
        <result property="holds" column="holds"/>
        <association property="branch" column="branch_id" javaType="Branch" select="com.solvd.bank.persistence.IBranchDAO"/>
        <association property="customer" column="customer_id" javaType="Customer" select="com.solvd.bank.persistence.ICustomersDAO"/>
    </resultMap>
    <insert id="saveEntity" keyProperty="id">
        INSERT INTO accounts (branch_id, customer_associate_id, amount, date_created, holds) " +
        VALUES (#, (?), (?), (?), (?))";]

    </insert>>


</mapper>
